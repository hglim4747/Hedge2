<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff7e7caa"
    tools:context="hedge.johnny.Activity.JoinActivity">

    <ImageView
        android:background="@drawable/main_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginlogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/username"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/loginlogo"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="이름 (1자 ~ 10자)"
        android:id="@+id/textView1"
        android:layout_alignBottom="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_marginBottom="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/userid"
        android:layout_below="@+id/username"
        android:layout_alignLeft="@+id/username"
        android:layout_alignStart="@+id/username"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="아이디 (5~18 영문자+숫자)"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/userid"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignStart="@+id/userid"
        android:layout_marginBottom="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/password"
        android:layout_below="@+id/userid"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignStart="@+id/userid"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="비밀번호 (5~10 숫자)"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginBottom="50dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phonenum"
        android:layout_below="@+id/password"
        android:layout_alignLeft="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="핸드폰번호 ( '-' 생략 )"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/phonenum"
        android:layout_alignLeft="@+id/phonenum"
        android:layout_alignStart="@+id/phonenum"
        android:layout_marginBottom="50dp" />

    <Button
        android:button="@null"
        android:gravity="center"
        android:text="가입"
        android:textColor="@color/alarm_type_text_selector"
        android:background="@drawable/alarm_day_selector"
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenum"
        android:layout_alignRight="@+id/phonenum"
        android:layout_alignEnd="@+id/phonenum" />

    <Button
        android:button="@null"
        android:gravity="center"
        android:text="돌아가기"
        android:textColor="@color/alarm_type_text_selector"
        android:background="@drawable/alarm_day_selector"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phonenum"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
