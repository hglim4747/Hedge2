<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp"
    android:gravity="center_vertical">

    <!--보낸사람-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/alarm_row_from_to"
            android:text="from. "
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/alarm_row_fromName"
            android:text="인호"
            android:textSize="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--메인 ROW-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <!--오전-->
        <TextView
            android:id="@+id/tx_AmPm"
            android:text="오전"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content" />

        <!--시간-->
        <TextView
            android:id="@+id/tx_AlarmTime"
            android:text="9:00"
            android:textSize="25dp"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content" />

        <!--알람 메시지-->
        <TextView
            android:id="@+id/alarm_row_msg"
            android:layout_marginLeft="5dp"
            android:text="컴퓨터 구조 수업"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--버튼-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            android:gravity="right">

            <ImageButton
                android:id="@+id/btn_modify"
                android:src="@drawable/friend_modify"
                android:background="#00ffffff"
                android:onClick="btnClickAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btn_del"
                android:src="@drawable/friend_del"
                android:background="#00ffffff"
                android:paddingLeft="5dp"
                android:onClick="btnClickAlarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <!--서브 ROW-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--월화수목금토일-->
        <TextView
            android:id="@+id/tx_Mon"
            android:text="월"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_Tue"
            android:text="화"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_Wed"
            android:text="수"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_Thu"
            android:text="목"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_Fri"
            android:text="금"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_Sat"
            android:text="토"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tx_Sun"
            android:text="일"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <!--알람타입-->
        <TextView
            android:id="@+id/alarm_row_type"
            android:text="알람 타입"
            android:textColor="#888888"
            android:layout_marginLeft="15dp"
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>